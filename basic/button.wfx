<library>
  <class name="button" extends="tknode">
    <attribute name="text"/>
    
    <handler on="construct">
      parent_widget = wtk.find_parent_widget(this)

      this.widget = Tkinter.Button(parent_widget,text=self.parent.text)

      #register the widget for attribute updates
      self.parent.__wfattrs__['text'].register([this.widget, lambda widget, v: widget.configure(text=v)])
    </handler>
    
  </class>
</library>
