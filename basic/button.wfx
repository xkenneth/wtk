<library>
  <class name="button" extends="tknode">
    <attribute name="text"/>
    
    <handler on="construct">
      parent_widget = wtk.find_parent_widget(this)
      
      this.widget = Tkinter.Button(parent_widget,text=this.text.get())

      #register the widget for attribute updates
      bind(this.text,this.widget,lambda widget, v: widget.configure(text=v))
    </handler>
    
  </class>
</library>
